<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:targetSdkVersion="33"> <!--设置为较高的值有助于确保你的应用程序能够充分利用最新的 Android 版本所提供的特性和功能-->

    <!-- 添加权限声明 -->

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <!--SMS发送所需要的权限-->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!--假如我们要保存录音,还需要以下权限-->
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions"></uses-permission>

    <!-- SD卡权限  -->

    <!-- Required only if your app targets Android 13. -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /> <!-- API 33后所需的媒体文件的 权限  -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /><!-- API 33后所需的媒体文件的 权限  -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" /><!-- API 33后所需的媒体文件的 权限  -->

    <!-- Required to maintain app compatibility. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="33">

        <!--第一个activity画面-->
        <activity
            android:name="activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--第二个activity画面-->
        <activity android:name="activity.ListActivity"></activity>

        <!--第三个activity画面-->
        <activity
            android:name="activity.RecordSoundActivity"></activity>

    </application>

</manifest>
